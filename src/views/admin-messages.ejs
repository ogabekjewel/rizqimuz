<%- include('parts/admin-header') %> 

    <div
      class="flex h-screen bg-gray-50 dark:bg-gray-900"
      :class="{ 'overflow-hidden': isSideMenuOpen }"
    >
   <!-- Desktop sidebar --> 
    <%- include('components/admin-sidebar') %>    

            <!-- Mobile hamburger -->
            <button
              class="p-1 mr-5 -ml-1 rounded-md md:hidden focus:outline-none focus:shadow-outline-purple"
              @click="toggleSideMenu"
              aria-label="Menu"
            >
              <svg
                class="w-6 h-6"
                aria-hidden="true"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                  clip-rule="evenodd"
                ></path>
              </svg>
            </button>
            <!-- Search input -->
            <div class="flex justify-center flex-1 lg:mr-32">
              <div
                class="relative w-full max-w-xl mr-6 focus-within:text-purple-500"
              >
                <div class="absolute inset-y-0 flex items-center pl-2">
                  <svg
                    class="w-4 h-4"
                    aria-hidden="true"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
                      clip-rule="evenodd"
                    ></path>
                  </svg>
                </div>
                <input
                  class="w-full pl-8 pr-2 text-sm text-gray-700 placeholder-gray-600 bg-gray-100 border-0 rounded-md dark:placeholder-gray-500 dark:focus:shadow-outline-gray dark:focus:placeholder-gray-600 dark:bg-gray-700 dark:text-gray-200 focus:placeholder-gray-500 focus:bg-white focus:border-purple-300 focus:outline-none focus:shadow-outline-purple form-input"
                  type="text"
                  placeholder="Search for projects"
                  aria-label="Search"
                />
              </div>
            </div>
            <ul class="flex items-center flex-shrink-0 space-x-6">
              <!-- Theme toggler -->
              <li class="flex">
                <button
                  class="rounded-md focus:outline-none focus:shadow-outline-purple"
                  @click="toggleTheme"
                  aria-label="Toggle color mode"
                >
                  <template x-if="!dark">
                    <svg
                      class="w-5 h-5"
                      aria-hidden="true"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
                      ></path>
                    </svg>
                  </template>
                  <template x-if="dark">
                    <svg
                      class="w-5 h-5"
                      aria-hidden="true"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
                        clip-rule="evenodd"
                      ></path>
                    </svg>
                  </template>
                </button>
              </li>
              <!-- Notifications menu -->
             <%- include('components/admin-notification') %>  
              <!-- Profile menu -->
              <%- include('components/admin-profile') %> 
            </ul>
          </div>
        </header>
        <main class="h-full overflow-y-auto">
          <div class="container px-6 mx-auto grid">
            
            <!-- CTA -->
            <a
              class="flex items-center justify-between p-4 mb-8 text-sm font-semibold text-purple-100 bg-purple-600 rounded-lg shadow-md focus:outline-none focus:shadow-outline-purple"
              href="https://github.com/estevanmaito/windmill-dashboard"
            >
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                  ></path>
                </svg>
                <span>Star this project on GitHub</span>
              </div>
              <span>View more &RightArrow;</span>
            </a>
            
            
            <!-- Cards with title -->
            <h4
              class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300"
            >
              Messages
            </h4>
            <div class="grid gap-6 mb-8 md:grid-cols-2">
              <% for(let message of messages) { %>
              <div
                class="min-w-0 p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800"
              >
              <h4 class="mb-4 font-semibold text-gray-600 dark:text-gray-300">
                <%= message.name %> 
              </h4>
              <h4 class="font-semibold text-gray-600 dark:text-gray-300">
                <%= message.phone %> 
              </h4>
              <p class="mb-2 text-gray-600 dark:text-gray-400">
                <%= message.comment %> 
              </p>
              <button id="<%= message.message_id %> " class="message-delete mb-2 px-3 py-1 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-md active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">
                Delete
                </button>
              </div>
              <% } %> 
            </div>
            
            <!-- Cards with title -->
            <h4
              class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300"
            >
              Applications
            </h4>
            <div class="grid gap-6 mb-8 md:grid-cols-2">
              <% for(let application of applications) { %>
                  <div
                    class="min-w-0 p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800"
                  >
                  <h4 class="mb-4 font-semibold text-gray-600 dark:text-gray-300">
                    <%= application.name %> 
                  </h4>
                  <h4 class="font-semibold text-gray-600 dark:text-gray-300">
                    <%= application.phone %> 
                  </h4>
                  <p class="mb-2 text-gray-600 text-gray-600 dark:text-gray-300">Board:</p>
                  <a href="<%= application.board %> " class="mb-2 text-gray-600 dark:text-gray-400">
                    <%= application.board %> 
                  </a>
                  <br>
                  <p class="mb-2 text-gray-600 text-gray-600 dark:text-gray-300">Github:</p>
                  <a href="<%= application.github %> " class="mb-2 text-gray-600 dark:text-gray-400">
                    <%= application.github %> 
                  </a>
                  <br>
                  <p class="mb-2 text-gray-600 text-gray-600 dark:text-gray-300">Portfolio:</p>
                  <a href="<%= application.portfolio %>" class="mb-2 text-gray-600 dark:text-gray-400">
                    <%= application.portfolio %> 
                  </a>
                  <p class="mb-2 text-gray-600 text-gray-600 dark:text-gray-300">Comment:</p>
                  <p class="mb-2 text-gray-600 dark:text-gray-400">
                    <%= application.comment %> 
                  </p>
                  <button id="<%= application.id %> " class="application-delete mb-2 px-3 py-1 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-md active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">
                    Delete
                    </button>
                  </div>
              <% } %> 
            </div>
            
          </div>
        </main>
      </div>
    </div>


<script>
    let messageBtn = document.querySelectorAll(".message-delete")
    for(let i = 0; i < messageBtn.length; i ++) {
        messageBtn[i].addEventListener("click", async (e) => {
            let message_id = e.target.id
            let formData = new FormData()
            await formData.append("message_id", message_id)

            let response = await fetch("/admin/messages", {
                method: "DELETE",
                body: formData,
            })

            response = await response.json()

            if(response.ok) {
                window.location.reload()
            }
        })
    }

    let applicationBtn = document.querySelectorAll(".application-delete")
    for(let i = 0; i < applicationBtn.length; i ++) {
        applicationBtn[i].addEventListener("click", async (e) => {
            let application_id = e.target.id
            let formData = new FormData()
            await formData.append("id", application_id)

            let response = await fetch("/admin/applications", {
                method: "DELETE",
                body: formData,
            })

            response = await response.json()

            if(response.ok) {
                window.location.reload()
            }
        })
    }
</script>


  </body>
</html>
