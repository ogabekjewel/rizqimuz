<%- include('parts/header') %>

<header class="header header-freelancers">
    <%- include('components/navbar', { logo: 'white' }) %>
    <div class="container">
        <h1 class="header__title">
            <span>Rizqingizni</span>
            <br>
            <span>hallolab oling</span>
        </h1>
    </div>
</header>

<main class="main">
    <div class="board-list">
        <div class="grid-container">
            <% for (let freelancer of freelancers) { %>
                <%- include('components/card', {
                    cardTitle: `${freelancer.first_name} ${freelancer.last_name}`,
                    viewsCount: null,
                    workersCount: null,
                    cardType: `${freelancer.avatar}`,
                    cardLink: `/freelancers/${freelancer.slug}`,
                    editable: false
                }) %>
            <% } %>
        </div>
        
        <% if(!(freelancers_number == "1")) { %>
            <div class="pagination-container">
                <div id="pagination">
                    <% if(c_page != 1) { %>
                        <a class="pagination-direction pagination-direction--prev" href="/freelancers?c_page=<%= Number(c_page) - 1 %>">
                            <svg width="8" height="14" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M2.828 7l4.95 4.95-1.414 1.414L0 7 6.364.636 7.778 2.05 2.828 7z" fill="#fff"></path></svg></a>
                    <% } %>     
                <span>
                    <% for(let i = 1; i < freelancers_number + 1; i++) { %>
                        <a href="/freelancers?c_page=<%= i %>" class="<%= c_page == i ? "current" : "" %>"><%= i %></a>
                    <% } %>      
                    <!-- <a>1</a>
                    <a class="current">2</a>
                    <a>3</a>
                    <a>4</a>
                    <a>5</a>
                    <a>6</a>
                    <a>7</a>
                    <a>8</a>
                    <a>9</a>
                    <i>...</i>
                    <a>15</a> -->
                </span>
                    <% if(c_page != (freelancers_number)) { %> 
                        <a class="pagination-direction pagination-direction--next" href="/freelancers?c_page=<%= Number(c_page) + 1 %>">
                        <svg width="8" height="14" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M5.172 7L.222 2.05 1.636.636 8 7l-6.364 6.364L.222 11.95 5.172 7z" fill="#fff"></path></svg>
                        </a>
                    <% } %> 
                </div>    
            </div>
        <% } %>
    </div>
</main>

<%- include('components/footer') %>
