<%- include('parts/header') %>
<!--SECTION INTRO-->
<section class="intro">
    <%- include('components/navbar', { logo: '' }) %>
    <div class="intro__description">
        <div class="flex-container">
            <div class="intro__inner">
                <h1 class="intro__title">
                    <span>Rizqingizni</span> <span>halollab oling</span>
                </h1>
                <p class="intro__text">Ishchi va ish beruvchini uchrashtiruvchi va yaxshilik ulashuvchi milliy
                    platforma</p>
                <div class="intro__links">
                    <a class="button button-white" href="/boards">E'lonlar</a>
                    <a class="button button-white" href="/freelancers">Frilanserlar</a>
                </div>
            </div>
        </div>
    </div>
    <div class="intro__bg"></div>
</section>

<!--SECTION TOP PROJECTS-->
<section class="section">
    <div class="container">
        <header class="section__header">
            <h2 class="section__heading">
                Top e'lonlar
            </h2>
        </header>
        <main class="section__main">
            <div class="slider-1 splide">
                <div class="splide__track">
                    <ul class="splide__list">
                        <% for(let board of top_boards) { %>
                            <li class="splide__slide">
                                <%- include('components/card', {
                                    cardTitle: `${board.name}`,
                                    viewsCount: board.views,
                                    workersCount: board.applications,
                                    cardType: `${board.image}`,
                                    cardLink: `/boards/${board.slug}`,
                                    editable: false
                                }) %> 
                            </li>
                        <% } %>      
                    </ul>
                </div>
            </div>
        </main>
    </div>
</section>

<!--TOP FREELANCERS-->
<section class="section">
    <div class="container">
        <header class="section__header">
            <h2 class="section__heading">
                Top frilanserlar
            </h2>
        </header>
        <main class="section__main">
            <div class="top-freelancers splide">
                <div class="splide__track">
                    <ul class="splide__list">
                        <% for(let freelancer of top_freelancers) { %>
                            <li class="splide__slide">
                                <div class="freelancer__card" title="Muhammadjavohir Suratov">
                                    <div class="freelancer__img">
                                        <picture>
                                            <source srcset="/img<%= freelancer.avatar %> 1x, /img<%= freelancer.avatar %> 2x">
                                            <img srcset="/img<%= freelancer.avatar %> 1x, /img<%= freelancer.avatar %> 2x"
                                                 alt="sponsor logo">
                                        </picture>
                                    </div>
                                    <div class="freelancer__info">
                                        <h3 class="freelancer__name"><%= freelancer.first_name %> <%= freelancer.last_name %> </h3>
                                        <span class="freelancer__level">Senior Developer</span>
                                    </div>
                                    <a class="card__link" href="/freelancers/<%= freelancer.slug %> ">Card Link</a>
                                </div>
                            </li>
                        <% } %>      
                    </ul>
                </div>
            </div>
        </main>
    </div>
</section>

<!--FINISHED PROJECTS-->
<section class="section">
    <div class="container">
        <header class="section__header">
            <h2 class="section__heading">
                Tugallangan loyihalar
            </h2>
        </header>
        <main class="section__main">
            <div class="slider-2 splide">
                <div class="splide__track">
                    <ul class="splide__list">
                        <% for(let board of finish_boards) { %> 
                            <li class="splide__slide">
                                <%- include('components/card', {
                                    cardTitle: `${board.name}`,
                                    viewsCount: board.views,
                                    workersCount: null,
                                    cardType: `${board.image}`,
                                    cardLink: `/boards/${board.slug}`,
                                    editable: false
                                }) %>
                            </li>  
                        <% } %> 
                    </ul>
                </div>
            </div>
        </main>
    </div>
</section>

<!--SECTION SPONSORS-->
<section class="section">
    <div class="container">
        <header class="section__header">
            <h2 class="section__heading">
                Bizning homiylar
            </h2>
        </header>
        <main class="section__main">
            <div class="slider-3 splide">
                <div class="splide__track">
                    <ul class="splide__list">
                        <% for(let sponsor of sponsors) { %>
                            <li class="splide__slide">
                                <div class="sponsors__card">
                                    <picture>
                                        <source srcset="/img<%= sponsor.image %> 1x, /img<%= sponsor.image %> 2x">
                                        <img srcset="/img<%= sponsor.image %> 1x, /img<%= sponsor.image %> 2x"
                                             alt="sponsor logo">
                                    </picture>
                                    
                                    <a class="sponsors__link" href="<%= sponsor.link %> ">Uber</a>
                                </div>
                            </li>
                        <% } %>     
                    </ul>
                </div>
            </div>
        </main>
    </div>
</section>

<!--STATISTICS-->
<section class="section">
    <div class="container">
        <header class="section__header">
            <h2 class="section__heading">
                Statistikalar
            </h2>
        </header>
        <main class="section__main">
            <div class="statistics">
                <div class="statistics__card">
                    <strong class="statistics__value"><%= freelancers.length %> </strong>
                    <h3 class="statistics__title">Ish izlayotganlar</h3>
                    <img class="statistics__icon" src="/img/icons/statistic-1.svg" alt="statistic icon">
                </div>
                <div class="statistics__card">
                    <strong class="statistics__value">55</strong>
                    <h3 class="statistics__title">Ish beruvchilar</h3>
                    <img class="statistics__icon" src="/img/icons/statistic-2.svg" alt="statistic icon">
                </div>
                <div class="statistics__card">
                    <strong class="statistics__value"><%= finish_boards.length %> </strong>
                    <h3 class="statistics__title">Tugallangan loyihalar</h3>
                    <img class="statistics__icon" src="/img/icons/statistic-3.svg" alt="statistic icon">
                </div>
                <div class="statistics__card">
                    <strong class="statistics__value"><%= boards.length %> </strong>
                    <h3 class="statistics__title">Mavjud loyihalar</h3>
                    <img class="statistics__icon" src="/img/icons/statistic-4.svg" alt="statistic icon">
                </div>
            </div>
        </main>
    </div>
</section>

<!--FOOTER-->
<%- include('components/footer') %>
<%- include('parts/footer') %>